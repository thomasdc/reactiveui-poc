<reactiveui:ReactiveUserControl x:Class="WpfApp.UserControl2"
                                x:TypeArguments="local:FoobarViewModel"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:WpfApp"
                                xmlns:reactiveui="http://reactiveui.net"
                                mc:Ignorable="d"
                                d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBox Name="TheBox"></TextBox>
            <Button Name="TheButton" Content="Run Job"></Button>
            <TextBox Name="TheBoxCanExecute"></TextBox>
            <ProgressBar Name="TheProgressBar" IsIndeterminate="True" Height="5"></ProgressBar>
            <TextBox Name="TheThirdBox"
                     Padding="2"
                     Margin="5"
                     VerticalContentAlignment="Center">
            </TextBox>
        </StackPanel>
    </Grid>
</reactiveui:ReactiveUserControl>